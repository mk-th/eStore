<p id="notice"><%= notice %></p>

<h1>Listing <%= @account.account_name + "'s " %> Journal</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Account</th>
      <th>Amount</th>
      <th>Jamaa ~ Khatay</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journals.each do |journal| %>
      <tr>
        <td><%= journal.journal_date %></td>
        <td><%= journal.account.account_name %></td>
        <td><%= number_to_currency(journal.journal_amount, unit: "Rs. ") %></td>
        <td><%= journal.journal_entry_type %></td>
        <td><%= journal.journal_entry_description %></td>
        <td><%= link_to 'Show', account_journal_path(@account, journal) %></td>
        <td><%= link_to 'Edit', edit_account_journal_path(@account, journal) %></td>
        <td><%= link_to 'Destroy', [@account, journal], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

